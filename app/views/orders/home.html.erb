<div id='main_component'>
    <span id='title' align="center">
        Place an Order
    </span>

    <%= form_with(model: Candle.new, url: create_order_path, method: :post) do |form| %>
      <% if @errors.any? %>
        <div class="alert alert-danger">
          <h4><%= pluralize(@errors.count, "error") %> prohibited this order from being processed:</h4>
          <ul>
            <% @errors.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

        <div id='toprow'>
            <div class="row col-12">
                <div class="col-md-4">
                    <div class="form-floating">
                        <%= form.label :first_name, class: '' %>
                        <%= form.text_field :first_name, class: 'form-control' %>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-floating">
                        <%= form.label :last_name, class: '' %>
                        <%= form.text_field :last_name, class: 'form-control' %>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-floating">
                        <%= form.label :quantity, class: "form-label" %>
                        <%= form.number_field :quantity, class: 'form-control' %>
                    </div>
                </div>
            </div>
        </div>

        <div>
            <%= render 'fragrance_dropdown', list: @fragrance_list, form: form %>
        </div>

        <div class="row col-12">
          <div class="form-group mt-3">
            <%= form.submit 'Start Order', class: 'btn btn-primary' %>
          </div>
        </div>
      <% end %>
</div>
  